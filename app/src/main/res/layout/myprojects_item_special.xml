<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/project_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <ImageView
                    android:id="@+id/iv_create_new"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_mtrl_history"
                    app:tint="?attr/colorControlNormal" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">

<!--                <TextView-->
<!--                    android:id="@+id/tv_create_new"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Restore projects"-->
<!--                    android:textAppearance="?attr/textAppearanceBodyLargeEmphasized" />-->
                <TextView
                    android:id="@+id/tv_create_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restore projects"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_create_new_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Get your projects in a couple of clicks."
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_chevron_right_white_24dp"
                app:tint="?attr/colorControlNormal" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_projectrestoregit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/project_restoregit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="16dp"
                    android:src="@drawable/git_logo"
                    app:tint="?attr/colorControlNormal" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clone a project"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="From GitHub, GitLab, Bitbucket and more."
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_chevron_right_white_24dp"
                app:tint="?attr/colorControlNormal" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
